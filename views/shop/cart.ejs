<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (products.length > 0) { %>
                <div class="grid__list">
                    <ul class="card product-item">
                        <% products.forEach(p => {  %>
                            <li style="list-style: none;">
                                <div>
                                    <img src="<%= p.productData.imageUrl%>" alt="<%=p.productData.title%>" class="card" style="width: 100px; padding: 1.5rem 0rem">
                                    <p style="font-weight: bold;"><%= p.productData.title %> (<%= p.qty%> qty) </p>
                                    <div>
                                        <form action="/cart/delete" method="POST">
                                            <input type="hidden" name="productId" value="<%= p.productData.id %>">
                                            <button class="btn" type="submit">Delete</button>
                                        </form>
                                    </div>
                                </div>
                                
                            </li>
                        <% }) %>
                    </ul>
                    
                </div>
                <% } else { %>
                    <h1>No Cart Product Found!</h1>
                    <% } %>
        </main>
        <%- include('../includes/end.ejs') %>